{% extends 'admin/admin_layout.html.twig' %}

{% block body %}

{%include 'includes/messages.html.twig'%}
<h1>Usuários</h1>
<a href="{{path('admin_user_new')}}">Criar Usuário</a>
<hr>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Criado EM</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{user.id}}</td>
                <td> <a href="{{path('admin_user_update', {'id': user.id})}}">{{user.name}}<a></td>
                <td> <a href="{{path('admin_user_update', {'id': user.id})}}">{{user.email}}<a></td>
                <td>{{user.createdAt|date('d/M/Y H:i:s')}}</td>
                <td> 
                    <a href="{{path('admin_user_update', {'id': user.id})}}">Editar<a>
                    <a href="{{path('admin_user_delete', {'id': user.id})}}">Deletar<a>
                </td>
                
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}